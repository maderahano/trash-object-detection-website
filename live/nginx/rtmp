server {
	listen 8080;
	server_name  localhost;

	# rtmp stat
	location /stat {
		rtmp_stat all;
		rtmp_stat_stylesheet stat.xsl;
	}

	# rtmp stat.xsl
	location /stat.xsl {
		root /var/www/html/rtmp;
	}

	# rtmp control
	location /control {
		rtmp_control all;
	}
}

server {
	listen 8088;

	location / {
		add_header Access-Control-Allow-Origin *;
		root /var/www/html/stream;
	}
}

types {
	application/dash+xml mpd;
}
